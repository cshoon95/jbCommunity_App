<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="분실물 게시판"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivdBoard"
                android:layout_width="280dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_border"/>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/board_detail_nic"
                    android:layout_width="280dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:hint=" 아이디"
                    android:padding="10dp"
                    android:textColorHint="#212121"
                    android:textColor="#212121"
                    android:background="#eeeeee"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/board_detail_title"
                    android:layout_width="280dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:hint=" 제목"
                    android:drawableLeft="@drawable/ic_textsms_black_24dp"
                    android:drawableStart="@drawable/ic_textsms_black_24dp"

                    android:textColorHint="#212121"
                    android:textColor="#212121"
                    android:background="#eeeeee"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/board_detail_content"
                android:layout_width="280dp"
                android:layout_height="138dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="내용을 적어주세요."
                android:scrollbars = "vertical"
                android:textColorHint="#212121"
                android:textColor="#212121"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/board_detail_hit"
                android:layout_width="280dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColorHint="#212121"
                android:textColor="#212121"
                android:background="#eeeeee"
                android:textSize="10dp" />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </RadioGroup>


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="61dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_boardreturn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="목록 보기"
                    android:textColor="#212121"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_boardedit"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4.5dp"
                    android:layout_marginRight="4.5dp"
                    android:text="글 수정"
                    android:textColor="#212121"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_boarddelete"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="글 삭제"
                    android:textColor="#212121"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>