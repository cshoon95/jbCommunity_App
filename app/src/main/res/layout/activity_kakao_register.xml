<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kakaohide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/jb1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="중부대 커뮤니티에 오신 것을 환영합니다."
                android:textColor="#212121"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="43dp"
            android:layout_gravity="center">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <EditText
                    android:id="@+id/kakaonic"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:singleLine = "true"
                    android:lines = "1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_contacts_black_24dp"
                    android:drawableStart="@drawable/ic_contacts_black_24dp"
                    android:hint="닉네임"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#212121" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="확인"
                    android:layout_gravity="center"
                    android:id="@+id/kakaonicvalidateButton"
                    android:textColor="#212121"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/kakaoregisterButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#b71c1c"
                    android:text="가입하기"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</RelativeLayout>