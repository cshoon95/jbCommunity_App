<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="공지사항"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_nic"
                    android:layout_width="280dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="#eeeeee"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:hint=" 관리자"
                    android:padding="10dp"
                    android:textColor="#212121"
                    android:textColorHint="#212121"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="280dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#eeeeee"
                    android:drawableLeft="@drawable/ic_textsms_black_24dp"
                    android:drawableStart="@drawable/ic_textsms_black_24dp"
                    android:hint="  제목"
                    android:padding="10dp"
                    android:textColor="#212121"
                    android:textColorHint="#212121"
                    android:textSize="10dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="내용을 적어주세요."
                android:textColor="#212121"
                android:textColorHint="#212121" />

            <TextView
                android:id="@+id/detail_hit"
                android:layout_width="280dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:background="#eeeeee"
                android:padding="10dp"
                android:textColor="#212121"
                android:textColorHint="#212121"
                android:textSize="10sp" />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </RadioGroup>


            <Button
                android:id="@+id/btn_return"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="목록 보기"
                android:textColor="#212121"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/prehome"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:text="이전 글" />

                <Button
                    android:id="@+id/posthome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="다음 글" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>