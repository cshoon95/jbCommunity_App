<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hide1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/jb1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="중부대 커뮤니티에 오신 것을 환영합니다."
                android:textColor="#212121"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp"
            android:layout_gravity="center">


            <EditText
                android:id="@+id/idText"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:singleLine = "true"
                android:lines = "1"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="아이디"
                android:padding="10dp"
                android:textColorHint="#212121"
                android:maxLines="1"
                android:maxLength="12"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="확인"
                android:layout_gravity="center"
                android:id="@+id/idvalidateButton"
                android:textColor="#212121"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine = "true"
                android:lines = "1"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawableStart="@drawable/ic_https_black_24dp"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="#212121"
                android:maxLines="1"
                android:maxLength="12"/>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
            <EditText
                android:id="@+id/passwordText1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine = "true"
                android:lines = "1"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawableStart="@drawable/ic_https_black_24dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="#212121"
                android:maxLines="1"
                android:maxLength="12"/>

                <ImageView
                    android:layout_width="30dp"
            android:layout_weight="2"
                    android:layout_marginTop="20dp"
            android:layout_height="27dp"
            android:id="@+id/setImage"/>
        </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <EditText
                    android:id="@+id/nicText"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine = "true"
                    android:lines = "1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="40dp"
                    android:hint="닉네임"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_contacts_black_24dp"
                    android:drawableStart="@drawable/ic_contacts_black_24dp"
                    android:paddingBottom="10dp"
                    android:padding="10dp"
                    android:textColorHint="#212121"
                    android:maxLength="12"
                    android:maxLines="1"/>

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="확인"
                    android:layout_gravity="center"
                    android:id="@+id/nicvalidateButton"
                    android:textColor="#212121"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/emailText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:hint="이메일"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine = "true"
                    android:lines = "1"
                    android:padding="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#212121"
                    android:textColorHint="#212121"
                    />

            </LinearLayout>

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:background="#b71c1c"
                android:text="가입하기"
                android:layout_gravity="center"
                android:id="@+id/registerButton"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>